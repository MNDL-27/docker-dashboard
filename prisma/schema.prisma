// Prisma schema for Docker Dashboard Cloud
// Phase 1: Foundation & Identity

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for authentication
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  organizationMemberships OrganizationMember[]
  projectMembers          ProjectMember[]
  createdHostTokens       HostToken[]
  organizationInvites     OrganizationInvite[]
  auditLogs               AuditLog[]

  @@index([email])
}

// Session model for connect-pg-simple
model Session {
  sid    String   @id
  sess   Json
  expire DateTime

  @@index([expire])
}

// Organization model for multi-tenancy
model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members    OrganizationMember[]
  projects   Project[]
  invites    OrganizationInvite[]
  hosts      Host[]
  hostTokens  HostToken[]
  auditLogs   AuditLog[]
  alertRules  AlertRule[]
  webhooks    Webhook[]

  @@index([slug])
}

// Organization member with RBAC roles
model OrganizationMember {
  id             String   @id @default(uuid())
  userId         String
  organizationId String
  role           OrgRole  @default(VIEWER)
  createdAt      DateTime @default(now())

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
}

// Project model within an organization
model Project {
  id             String   @id @default(uuid())
  name           String
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members      ProjectMember[]

  @@index([organizationId])
}

// Project member with optional role inheritance from org
model ProjectMember {
  id               String      @id @default(uuid())
  userId           String
  projectId        String
  role             ProjectRole @default(VIEWER)
  inheritedFromOrg Boolean     @default(true)
  createdAt        DateTime    @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
  @@index([userId])
  @@index([projectId])
}

// RBAC enums
enum OrgRole {
  OWNER
  ADMIN
  OPERATOR
  VIEWER
}

enum ProjectRole {
  OWNER
  ADMIN
  OPERATOR
  VIEWER
}

// Organization invitation model
model OrganizationInvite {
  id             String    @id @default(uuid())
  email          String
  organizationId String
  role           OrgRole   @default(VIEWER)
  token          String    @unique
  inviterUserId  String
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime  @default(now())

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  inviter      User         @relation(fields: [inviterUserId], references: [id], onDelete: Cascade)

  @@index([email, organizationId])
  @@index([token])
}

// Phase 2: Host Enrollment & Inventory

// Host model
model Host {
  id             String     @id @default(uuid())
  organizationId String
  name           String
  hostname       String
  os             String
  architecture   String
  dockerVersion  String
  lastSeen       DateTime?
  status         HostStatus @default(OFFLINE)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  containers   Container[]

  @@index([organizationId])
  @@index([status])
}

// Host enrollment token
model HostToken {
  id             String    @id @default(uuid())
  token          String    @unique @default(dbgenerated("gen_random_uuid()"))
  organizationId String
  createdBy      String
  expiresAt      DateTime
  usedAt         DateTime?
  createdAt      DateTime  @default(now())

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([token])
}

// Container snapshot
model Container {
  id        String    @id @default(uuid())
  dockerId  String
  hostId    String
  name      String
  image     String
  imageId   String
  command   String
  state     String
  status    String
  ports     Json
  labels    Json
  startedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  host    Host              @relation(fields: [hostId], references: [id], onDelete: Cascade)
  metrics ContainerMetric[]
  logs    ContainerLog[]
  alerts  Alert[]

  @@unique([hostId, dockerId])
  @@index([hostId])
}

enum HostStatus {
  ONLINE
  OFFLINE
}

// Phase 3: Observability & Actions

model ContainerMetric {
  id               String   @id @default(cuid())
  containerId      String
  timestamp        DateTime @default(now())
  cpuUsagePercent  Float
  memoryUsageBytes BigInt
  networkRxBytes   BigInt
  networkTxBytes   BigInt

  container Container @relation(fields: [containerId], references: [id], onDelete: Cascade)

  @@index([containerId, timestamp(sort: Desc)])
}

model ContainerLog {
  id          String   @id @default(cuid())
  containerId String
  timestamp   DateTime @default(now())
  stream      String // "stdout" or "stderr"
  message     String

  container Container @relation(fields: [containerId], references: [id], onDelete: Cascade)

  @@index([containerId, timestamp(sort: Desc)])
}

model AuditLog {
  id             String   @id @default(cuid())
  organizationId String
  userId         String? // Optional if system-initiated
  targetType     String // e.g., "CONTAINER"
  targetId       String
  action         String // e.g., "START", "STOP", "RESTART"
  status         String // e.g., "SUCCESS", "FAILURE"
  reason         String?
  errorDetails   String?
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([targetType, targetId])
  @@index([createdAt(sort: Desc)])
}

// Phase 4: Alerting

model AlertRule {
  id             String   @id @default(cuid())
  organizationId String
  name           String
  condition      String // "CONTAINER_DOWN", "RESTART_LOOP", "CPU_USAGE", "MEMORY_USAGE"
  threshold      Float? // Value to exceed (e.g. 80 for CPU%)
  duration       Int // Minutes the condition must persist before firing
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  alerts       Alert[]

  @@index([organizationId])
}

model Alert {
  id          String    @id @default(cuid())
  ruleId      String
  containerId String
  status      String // "FIRING" or "RESOLVED"
  startedAt   DateTime  @default(now())
  resolvedAt  DateTime?
  createdAt   DateTime  @default(now())

  rule      AlertRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  container Container @relation(fields: [containerId], references: [id], onDelete: Cascade)

  @@index([ruleId])
  @@index([containerId])
  @@index([status])
  @@unique([ruleId, containerId, status]) // Deduplication: only one FIRING alert per rule+container
}

model Webhook {
  id             String   @id @default(cuid())
  organizationId String
  url            String
  secret         String? // Optional HMAC secret for payload signatures
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}
